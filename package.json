  "name": "react-popover",
  "homepage": "https://github.com/littlebits/react-popover",
  "main": "build/index.js",
  "description": "A specification backed popover for react",
  "devDependencies": {
    "babel-cli": "^6.3.15",
    "babel-core": "^6.3.15",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
