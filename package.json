    "ramda": "^0.18.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-draggable": "^1.1.1",
    "react-hot-loader": "^1.2.4",
    "react-tappable": "^0.7.1",
    "react-test-renderer": "^15.4.2",
